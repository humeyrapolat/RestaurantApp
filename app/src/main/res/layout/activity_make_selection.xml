<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F0EF"
    android:padding="30dp"
    tools:context=".ForgetPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">


        <TextView
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/reem_kufi"
            android:text="@string/make_select_on"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/reem_kufi"
            android:text="@string/reset_your_password_w_th"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#7B7D7D" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/recyclerview_background"
            android:padding="15dp">

            <ImageView
                android:id="@+id/phonelogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:padding="4dp"
                android:src="@drawable/phonelogo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/mobile_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/phonelogo"
                android:fontFamily="@font/reem_kufi"
                android:padding="2dp"
                android:text="@string/via_sms"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/makeSelection_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/recyclerview_background"
            android:padding="15dp">

            <ImageView
                android:id="@+id/emaillogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:padding="4dp"
                android:src="@drawable/emaillogo"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/email_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/emaillogo"
                android:fontFamily="@font/reem_kufi"
                android:padding="2dp"
                android:text="@string/via_email"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/makeSelection_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>